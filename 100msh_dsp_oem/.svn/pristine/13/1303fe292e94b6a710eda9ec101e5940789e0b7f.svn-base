    <script type="text/javascript">
        function preStepPage(v){
            var v = parseInt(v)-1
            location.href ='./create'+v+'.html';
        }
        function nextStepPage(v){
            var v = parseInt(v)+1
            location.href ='./create'+v+'.html';
        }
        layui.use(['form', 'layer', 'element', 'layedit', 'laydate'], function () {
            var form = layui.form,
                layer = layui.layer,
                layedit = layui.layedit,
                element = layui.element,
                laydate = layui.laydate;
            var isfistCity = true, isfistSq = true;

            function init(){
                
            }
            init();
            //广告计划类别选择
            $('.mod_nav').on('click','li',function(){
                var th = $(this),
                    idx = th.index(),
                    type = th.attr('_type');
                th.addClass('cur').siblings('li').removeClass('cur');
                $('.usre_box article').eq(idx).show().siblings().hide();
            })

            //区域
            form.on('radio(user_area)', function (data) {
                var val = data.value;
                if(val==1){
                    if(isfistCity){
                        getBhCity(0);//请求省市
                        isfistCity = false;
                    }
                    $('.city_box').show();
                }else if(val==2){
                    if(isfistSq){
                        getBhCitySel();
                        isfistSq = false;
                    }
                    $('.zone_box').show();
                    $('.city_box').hide();
                }else{
                    $('.zone_box').hide();
                    $('.city_box').hide();
                }
            })
            //IP定向
            form.on('radio(user_ip)', function (data) {
                var val = data.value;
                if(val==1){
                    $('.ip_box').show();
                }else{
                    $('.ip_box').hide();
                }
            })
            //商圈
            form.on('select(zone_city)', function (data) {
                var val = data.value;
                var box = $('.zoneId'+val);
                if(val){
                    $('.zbox').hide();
                    if(box.length>0){
                        box.show();
                    }else{
                        getBhZoneList(val);
                    }
                }
            })

