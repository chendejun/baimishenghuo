                var postData ={'type':'1','cityId':''};
                $.ajax({
                    type: "POST",
                    url: 'v1.2/BhDelivery/getBhCityArea',
                    data: postData,
                    dataType:'json',
                    success: function(rs){
                        if(rs.api_code == 1){
                            var data = rs.data;
                            var str ='<option value>请输入搜索选择城市</option>';
                            if(!data){
                                $('#zone_city').html('');
                                return;
                            }
                            $.each(data,function(k,v){
                                str += '<option value="'+v.cityId+'">'+v.name+'</option>';
                            });
                            $('#zone_city').html(str);
                        }else{
                            $('#zone_city').html('');
                        }
                        form.render();
                    },
