		function crowd_snalysis(el,setData,xdata) {
		    var set = { 
		        tooltip : {
		            trigger: 'axis',
		            confine:true,
		            axisPointer : {
		                type : 'line'
		            },
		            formatter: '时间：{b0}<br />人数：{c0}'
		        },
		        grid: {
		            left: '0%',
		            right: '0%',
		            bottom: '0%',
		            width:"100%",
		            containLabel: true                
		        },              
		        xAxis : [
                    {          
		                type : 'category',
		                data :xdata,
                        boundaryGap: true,
		                axisLabel:{
		                    textStyle:{
		                        fontSize:10
		                    }          
		                }
		            }
		        ], 
		        yAxis : [
		            {
                        splitLine:{show: false}, 
		                name : "人数",
		                type : "value",      
		            }
		        ],
		        series : [
		            {
		                name:'人数',
		                type:'line',
		                symbol: 'circle',
		                smooth: false,
		                areaStyle: {normal: {color:'#fff'}},
		                label: {
		                    normal: {
		                        show: true,
		                        position: 'top',
		                        formatter: '{c}',
		                        textStyle:{
		                        	fontSize:10
		                        }
		                    }
		                },
		                itemStyle: {
		                    normal:{
		                        color:'#53d99d'
		                    }                       
		                },
		                data:setData
		            }
		        ]
		    };            
		    el.setOption(set);   
		};







