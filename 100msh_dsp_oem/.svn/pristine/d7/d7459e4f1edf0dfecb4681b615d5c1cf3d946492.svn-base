									secondIndustry = v.cate_name;
									Id2 = v.cate_id;
									$('.industryname').html(firstIndustry + " " + secondIndustry);
									$('.industryname').attr("data-id1", Id1);
									$('.industryname').attr("data-id2", Id2);
								}

							})
						}
					},
