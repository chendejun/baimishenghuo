								<td><span class="aleadyNum" style="margin-left: 10px;">腾讯授权已过期，请先重新授权</span></td>
								{{/if}}
							{{elseif $data.comp_info.gdt_wx_bind == 1}}
								<td>已绑定</td>
								<td>--</td>
							{{/if}}
	                	</tr>
	                </tbody>
	            </table>
