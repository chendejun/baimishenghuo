/* 头部样式 */
.layui-layout-admin .layui-header {background:url(/public/img/starsky/topbj.jpg) no-repeat;background-size: cover;}
.logo{ float: left; line-height:60px;  text-align: center; margin-right: 15px; }
.logo span{display: inline-block;font-size:14px; padding:0 5px;}
.logo img{width: 98px;height: 28px;display: inline-block}
.layui-nav .layui-nav-more{border-color: #fff transparent transparent;}
.layui-nav .layui-nav-mored,.layui-nav-itemed .layui-nav-more {border-color: transparent transparent #fff}

/*顶部右侧导航*/
.top_menu{ position:absolute; right:0; background:none;}
.layui-nav .layui-nav-item a{color:#fff;}
.top_menu.layui-nav .layui-this:after{ width:0px; }
.top_menu.layui-nav .layui-this{ background-color:transparent; }
.top_menu.layui-nav .layui-this a{ color:#666; }
.top_menu.layui-nav dd.layui-this a{ color:#666; }
.top_menu.layui-nav dd a{ color:#666; } 
.top_menu.layui-nav .layui-nav-child a:hover{ color:#666; background-color:#21384b; }
.top_menu .iconfont{ font-size: 14px !important; }
/* .top_menu .layui-nav-bar{ top:60px !important; background-color:rgba(0,0,0,0.7) } */
.layui-anim{background-color:#fff;}

/*左侧导航重定义*/
.layui-layout-admin .layui-side{ left:0;background:url(/public/img/starsky/leftbj.jpg) no-repeat; }
.layui-nav-item a cite{ padding:0 5px;}
.layui-side-scroll{ height:auto; }
.layui-nav-item.layui-nav-itemed a{color: #fff;}
.layui-nav-item.layui-nav-itemed .layui-nav-child a{ color: #fff; }
.layui-nav-itemed>a,.layui-nav-tree .layui-nav-title a{color: #fff;}
.layui-nav-tree .layui-this>a,.layui-nav-tree .layui-this>a:hover,.layui-nav-tree .layui-nav-child a:hover{
    color: #fff;background: rgba(255, 255, 255, 0.2)
}

.layui-nav-tree .layui-nav-bar {background-color: #fff}


/*右侧body*/
.layui-body{overflow:hidden;}
.layui-tab-content{ height:100%; padding:0; }
.layui-tab-item{ position: absolute; top:40px; bottom:0; left: 0; right: 0; padding: 0; margin: 0;-webkit-overflow-scrolling: touch;}
.marg0{ margin:0; }
.layui-tab-title .layui-this{ background-color:#21384b; color:#fff; }
.layui-tab-title .layui-this:after{ border:none; }
.layui-tab-title li cite{ font-style: normal; padding-left:5px; }
.layui-tab-title li{color: #666;background-color:#fafafa;}
.layui-tab-title li a {color: #666;}
.clildFrame.layui-tab-content{ padding-right: 0; }
.clildFrame.layui-tab-content iframe{ width: 100%; height: 100%; border:none; min-width: 320px; }

/*图标样式*/
.icon_infor{background:url(/public/img/default/defaultpng_ck.png) no-repeat;display:inline-block;vertical-align: middle;margin-top:-2px;margin-right:8px;}

.icon_home,.layui-tab-title .layui-this .icon_home{width:22px;height: 21px;background-position: -2px -2px;}
.icon_my,.layui-tab-title .layui-this .icon_my{width:22px;height: 21px;background-position: -3px -31px;}
.icon_account,.layui-tab-title .layui-this .icon_account{width:24px;height: 21px;background-position: -2px -64px;}
.icon_adv,.layui-tab-title .layui-this .icon_adv{width:24px;height: 21px;background-position: -2px -98px;}
.icon_effect,.layui-tab-title .layui-this .icon_effect{width:24px;height: 21px;background-position: -2px -135px;}
.icon_dmp,.layui-tab-title .layui-this .icon_dmp{width:24px;height: 21px;background-position: -2px -169px;}
.icon_activity,.layui-tab-title .layui-this .icon_activity{width:24px;height: 21px;background-position: -2px -201px;}
.icon_skin{width:24px;height: 21px;background-position: -32px -282px;}
.icon_pswd{width:24px;height: 21px;background-position: -32px -314px;}
.icon_out{width:24px;height: 21px;background-position: -32px -347px;}
.icon_notice{width:26px;height: 26px;background-position: -2px -239px;}
.icon_none{display:none;}
.icon_infor.icon_skin,.icon_infor.icon_pswd,.icon_infor.icon_out,.icon_infor.icon_notice{margin-top: 0;}

.layui-tab-title .layui-this .icon_infor.icon_skin{background-position: -2px -282px;}
.layui-tab-title .layui-this .icon_infor.icon_pswd{background-position: -2px -314px;}
.layui-tab-title .layui-this .icon_out{background-position: -2px -347px;}

.layui-tab-title li .layui-tab-close{color: #666;}
