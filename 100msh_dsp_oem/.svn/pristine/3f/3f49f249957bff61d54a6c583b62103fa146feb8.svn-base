        $rid = Helper::clean($this->getRequest()->getPost('rid'));//广告主id
        $user_id =$this->uinfo['staff_id'];;//y用户id
        echo $user_id;exit;
        $par1['read_time'] = time();
        $par1['read_status'] = 2;
        $par['rid'] = $rid;
        $par['user_id'] = $user_id;
        $Notice = Helper::M('Notice');
        $result = $Notice->read($par,$par1);
        $arr = array('api_code'=>0,'msg'=>'success');
        Helper::outJson($arr);
    }
}