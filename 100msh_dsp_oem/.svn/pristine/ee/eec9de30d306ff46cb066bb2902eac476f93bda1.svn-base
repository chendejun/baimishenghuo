			//xData 日期      xValue数据
			option = {
				tooltip: {
					trigger: 'axis',
					axisPointer: {            // 坐标轴指示器，坐标轴触发有效
						type: 'shadow'        // 默认为直线，可选为：'line' | 'shadow'
					},
					formatter: function (params) {
						var content = '';
						for (var i = 0; i < params.length; i++) {
							if (params[i].name) {
								content += "时间：" + params[i].name + "<br />";
								break;
							}
						} for (var i = 0, key = {}; i < params.length; i++) {
							key = params[i];
							if (key.seriesName == '点击率' && (typeof key.value != 'undefined')) {
								key.value = key.value + ' %';
							}
							if (typeof key.value === 'undefined' || key.value === '-') {
								key.value = '暂无';
							}
							content += key.seriesName + "：" + key.value + "<br />";
						}
						return content;
					}
				},
				grid: {
					left: '2%',
					right: '4%',
					bottom: 60,
					top: 30,
					containLabel: true
				},
				legend: {
					x: 'center',
					y: 'bottom',
					data: ['点击率'],
				},
				xAxis: [
					{
						type: 'category',
						data: xData,
						axisTick: {
							alignWithLabel: true
						}
					}
				],
				yAxis: [
					{
						name: '点击率',
						type: 'value',
						axisLine: { // 轴线
							show: true,
							lineStyle: {
								color: '#888888',
								type: 'solid',
								width: 1
							}
						},
						axisTick: { // 轴标记
							show: true,
							length: 1,
							lineStyle: {
								type: 'solid',
								width: 0
							}
						},
						axisLabel: {
							formatter: '{value} %'
						}
					}
				],
				series: [
					{
						name: '点击率',
						type: 'line',
						smooth: true,
						itemStyle: {
							normal: {
								color: '#fe3c69'
							}
						},
						data: xValue
					}
				]
			};
			modEcharts.setOption(option);
		};

		//效果报告表格渲染
		function render_table(data) {
			var list_e = $("#list tbody"), str = "",totalStr = '', no_msg = $(".noMsg");
			if (data.length == 0) {
				list_e.html("");
				no_msg.text("暂无记录");
				return;
			}
			no_msg.text("");
			$.each(data.list, function (k, v) {
				var time = ""
				str += '<tr>';
//				if (v.stat_time) {
//					time = v.stat_time + "点"
//				} else {
//					time = v.stat_day
//				}
				str += '<td>' + v.the_date + '</td>';
				str += '<td>' + v.view + '</td>';
				str += '<td>' + v.click + '</td>';
				str += '<td>' + parseFloat(v.clicking_rate) + '%</td>';
				str += '<td>' + round(v.reportSpend, 2) + '</td>';
				str += '</tr>';
			})
			totalStr += '<tr>',
			totalStr += '<td>' + data.total_data.总计 + '</td>';
			totalStr += '<td>' + data.total_data.view + '</td>';
			totalStr += '<td>' + data.total_data.click + '</td>';
			totalStr += '<td>' + parseFloat(data.total_data.clicking_rate) + '%</td>';
			totalStr += '<td>' + round(data.total_data.reportSpend,2) + '</td>';
			totalStr += '</tr>',
			list_e.html(str+totalStr);
		}
		function render_table1(data,totalData) {
			var list_e = $("#list tbody"), str = "",totalStr = '', no_msg = $(".noMsg");
			if (data.length == 0) {
				list_e.html("");
				no_msg.text("暂无记录");
				return;
			}
			no_msg.text("");
			$.each(data, function (k, v) {
				var time = ""
				str += '<tr>';
				str += '<td>' + v.cityId + '</td>';
				str += '<td>' + v.view + '</td>';
				str += '<td>' + v.click + '</td>';
				str += '<td>' + parseFloat(v.clicking_rate) + '%</td>';
				str += '<td>' + round(v.reportSpend, 2) + '</td>';
				str += '</tr>';
			})
			totalStr += '<tr>',
			totalStr += '<td>' + totalData.总计 + '</td>';
			totalStr += '<td>' + totalData.view + '</td>';
			totalStr += '<td>' + totalData.click + '</td>';
			totalStr += '<td>' + parseFloat(totalData.clicking_rate) + '%</td>';
			totalStr += '<td>' + round(totalData.reportSpend,2) + '</td>';
			totalStr += '</tr>',
			list_e.html(str+totalStr);
		}

		//保留两位小数（四舍五入）
		function round(number, fractionDigits) {
			with (Math) {
				return round(number * pow(10, fractionDigits)) / pow(10, fractionDigits);
			}
		}

