	    //分页
	    function renderPage(pages,curr){
	        //显示分页
	        laypage({
	            cont: $('#list_page'), //容器。值支持id名、原生dom对象，jquery对象。
	            pages: pages, //通过后台拿到的总页数
	            skin: '#4c94f5',
				prev: '<em class="layui-icon"></em>',
				next: '<em class="layui-icon"></em>',
	            curr: curr || 1, //当前页
	            jump: function(obj, first){ //触发分页后的回调
	                if(!first){ //点击跳页触发函数自身，并传递当前页：obj.curr
	                	var start = (obj.curr-1)*10;
	                    render_table1(areaData.slice(start,end),totalData);
	                    if(obj.curr < pages){
	                    	var end = obj.curr*10;
	                    	render_table1(areaData.slice(start,end),totalData);
	                    }else if(obj.curr == pages){
	                    	render_table1(areaData.slice(start),totalData);
	                    }
	                }
	            }
	        });
	    }
//	    获取当前的日期
	    function CurentTime (){
		        var now = new Date();
		        var year = now.getFullYear();       //年
		        var month = now.getMonth() + 1;     //月
		        var day = now.getDate();            //日
		        var clock = year + "-";
		        if(month < 10)
		            clock += "0";
		        clock += month + "-";
		        if(day < 10)
		            clock += "0"; 
		        clock += day + " ";
		        return(clock); 
	    }
	</script>
