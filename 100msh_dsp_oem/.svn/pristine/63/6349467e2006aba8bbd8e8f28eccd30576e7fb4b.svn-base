	<script type="text/javascript">
		var industry1 = "{{$data.comp_info.cate_pid}}",
			industry2 = "{{$data.comp_info.cate_id}}",
			provincetitleId = "{{$data.comp_info.sc_pro}}", //13
			add_citystitleId = "{{$data.comp_info.sc_pid}}", //1302
			add_countytitleId = "{{$data.comp_info.sc_id}}", // 130202
			Id = "{{$data.comp_info.comp_id}}",
			pageType = getUrlParams('pageType') ? getUrlParams('pageType') : '',
			gdtStatus = '{{$data.comp_info.gdt_apply_status}}',
			wxbind = '{{$data.comp_info.gdt_wx_bind}}',
			account_type = '{{$data.comp_info.account_type}}';
		isEdit = false;
		var add_industryStr = "",
			add_industryDetailStr = "",
			provincetitleStr = "",
			add_citystitleStr = "",
			add_countytitleStr = "";

		var getVals = 1;

		layui.use(['form', 'layer', 'element'], function () {
			var form = layui.form(),
				layer = layui.layer,
				element = layui.element;
			var radioVal = ''; //筛选审核状态的单选框的值
			form.on('radio(audit)', function (data) {
				radioVal = data.value;
				getListData();
			})

			function getListData(curr) {
				var statusVal = radioVal == '' ? '' : '/status/' + radioVal
				$.ajax({
					type: "GET",
					url: '/v1.2/Advertiser/aptList/comp_id/' + Id + '/page/' + (curr || 1) + '/limit/10' + statusVal,
					dataType: 'json',
					success: function (res) {
						console.log(res)
						if (res.state == 1) {
							var oCurr = curr == undefined ? 1 : curr;
							RenderList(res.data, oCurr);
							renderPage(res.data.pages, curr)
						} else {
							tipTopShow(res.msg);
							$('.base_table').find('tbody').html(
								'<tr><td colspan="4" style="text-align:center;color:orange;">暂无数据！</td></tr>');
						}
					},
					error: function (err) {
						tipTopShow("查询信息失败，请重试...");
					}
				});
			}

			function RenderList(data, curr) {
				if (data.list.length == 0) {
					$('.base_table').find('tbody').html(
						'<tr><td colspan="4" style="text-align:center;color:orange;">暂无数据！</td></tr>');
					return;
				}
				var SetBtnStr = '',
					wxStr = '',
					emStr = '';
				$('.base_table').find('tbody').html("")
				$.each(data.list, function (k, v) {
					var str = '';
					var statusStr = '';
					var SetBtnStr='',
						emStr='';
					str += '<tr>';
					str += '<td>' + (Number(k) + 1) + '</td>';
					if (v.status == 0) {
						statusStr = '待审核'
					} else if (v.status == 1) {
						statusStr = '已审核通过'
					} else if (v.status == -1) {
						statusStr = '审核失败'
					} else if (v.status == -2) {
						statusStr = '未开通'
					}
					if(v.aptitude_id=='b'){
						if(gdtStatus==0){
							statusStr='<span>未开通</span>'
							SetBtnStr='<a class="bm-btn bm-btn-blue autoWidth" id="relationTencent" style="color:#ffffff;font-size: 14px;" href="/V1.2/Api/gdtCallback?login=1&comp_id={{$data.comp_info.comp_id}}" target="_blank">关联已有腾讯广告账号</a><button class="bm-btn bm-btn-blue" onclick="newAcctountFn()">新开户</button>';
						}else if(gdtStatus==1){
							SetBtnStr='--'
							statusStr='<span>申请中,申请日期：{{$data.comp_info.gdt_apply_time}}</span>'
						}else if(gdtStatus==2){
							statusStr='<span>审核不通过</span>'
							SetBtnStr='<a class="bm-btn bm-btn-blue autoWidth" id="relationTencent" style="color:#ffffff;font-size: 14px;" href="/V1.2/Api/gdtCallback?login=1&comp_id={{$data.comp_info.comp_id}}" target="_blank">关联已有腾讯广告账号</a><button class="bm-btn bm-btn-blue" onclick="newAcctountFn()">重新申请开户</button>'
						}else if(gdtStatus==3){
							statusStr='<span>已开通-新开</span>'
							SetBtnStr='--'
						}else if(gdtStatus==4){
							statusStr='<span>已开通 - 关联</span><span>( ID：{{$data.comp_info.gdt_account_id}}) 授权截止日期{{$data.token_info.expire_time}}</span>'
							SetBtnStr='<a class="bm-btn bm-btn-blue" style="color:#ffffff;font-size: 14px;" href="/V1.2/Api/gdtCallback?login=1&comp_id={{$data.comp_info.comp_id}}" target="_blank">重新授权</a>'
						}else if(gdtStatus==5){
							statusStr='<span>已开通-授权过期</span><span>( ID：{{$data.comp_info.gdt_account_id}} )</span>'
							if(account_type==1){
								statusStr+='<span>授权截止日期{{$data.token_info.expire_time}}</span>'
								SetBtnStr+='<button class="bm-btn bm-btn-blue" onclick="commissionFn({{$data.comp_info.account_type}})">重新授权</button>';
							}
						}
					}else if(v.aptitude_id=='c'){
						if(wxbind==0){
							statusStr='未绑定';
						}else{
							statusStr='--';
						}
						emStr='<em class="status_tip" data="请先开通腾讯广告,开通后才可绑定公众号投放朋友圈广告">？</em>'
						if(gdtStatus==0 || gdtStatus==1 || gdtStatus==2){
