    function PayAction() {
        $.ajax({
            type: "POST",
            url: '/v1.2/Scenes/checkAmountSufficientApi/scene_id/' + Id + '/scene_type/' + 3,
            dataType: 'json',
            success: function (res) {
                if (res.state == 1) { //验证成功
                    layer.open({
                        type: 1,
                        title: '支付确认',
                        content: '<div style="padding: 20px;color:#333;font-size:14px;">本次费用将从服务商账户中扣除支付。您的余额可支付本次付款。<p style="text-align:center;margin:20px;">请输入服务商管理员收到的确认短信验证码</p><div style="margin: 0 auto;width: 220px;"><input type="text" id="msg" style="width:90px;height:36px;text-align: center;"><input type="button" style="width:100px;height:42px;background-color:#1E9FFF;border:none;color:#fff;margin-left:20px;" id="sendMsg" value="获取验证" onclick="sendMsg()"></div></div>',
                        btn: '确定支付',
                        btnAlign: 'c',
                        shade: 0.6,
                        yes: function () {
                            var code = $.trim($('#msg').val());
                            if (!code) {
                                layui.layer.msg("请输入验证码");
                                return false;
                            }
                            upgradeToAppFn(code);
                        }
                    });
                } else if (res.state == 0) {  //验证失败
                    tipTopShow("验证金额失败，请重试...");
                    return;
                } else if (res.state == -1) {   //金额不足
                    layer.open({
                        type: 1,
                        title: '支付确认',
                        content: '<div style="padding: 20px 20px 0;color:#333;font-size:14px;">本次费用将从服务商账户中扣除支付。你的余额不足。</div>',
                        btn: '确定',
                        btnAlign: 'c',
                        shade: 0.6,
                        yes: function () {
                            location.href = '/v1.2/account/index';
                        }
                    });
                }
            },
            error: function (err) {
                tipTopShow("验证金额失败，请重试...");
            }
        });
    }

    function getCheckboxVal(startTime,endTime,userType){
        var apptypeStr = $("input:radio[name='apptype']:checked").val();
        getListData(startTime, endTime, userType,apptypeStr)
    }
    getCheckboxVal(getDay(-30), getDay(-1),3)
    //升级App分析版本
    function upgradeToAppFn(code) {
        $.ajax({
            type: "POST",
            url: '/v1.2/Scenes/upgradeToApp',
            dataType: 'json',
            data: {
                'scene_id': Id,
                'code': code
            },
            success: function (res) {
                // console.log(res)
                if (res.state == 1) {
                    tipTopShow(res.msg)
                    setTimeout(() => {
                        location.href = '/v1.2/Scenes/index';
                    }, 1500);
                } else {
                    tipTopShow(rs.msg);
                }
            },
            error: function (err) {
                tipTopShow("查询信息失败，请重试...");
            }
        });
    }
    //发送短信
    function sendMsg() {
        $.ajax({
            type: "POST",
            url: '/v1.2/scenes/sendShortMessage',
            dataType: 'json',
            success: function (res) {
                console.log(res)
                if (res.state == 1) {
                    tipTopShow('验证码发送成功');
                    settime();
                    //发送验证码倒计时  
                    var countdown = 90;
                    $('#sendMsg').val("重新发送(" + countdown + ")");
                    function settime() {
                        if (countdown == 0) {
                            $('#sendMsg').removeAttr('disabled');
                            $('#sendMsg').css('background-color', '#1E9FFF');
                            $('#sendMsg').val("获取验证码");
                            countdown = 90;
                            return;
                        } else {
                            $('#sendMsg').attr('disabled', 'disabled');
                            $('#sendMsg').css('background-color', '#bbb');
                            $('#sendMsg').val("重新发送(" + countdown + ")");
                            countdown--;
                        }
                        setTimeout(function () {
                            settime()
                        }, 1000)
                    }
                } else {
                    tipTopShow(rs.msg);
                }
            },
            error: function (err) {
                tipTopShow("验证码发送失败");
            }
        });
    }

    //获取列表数据
    function getListData(startTime, endTime, usertype, apptype) {
        $.ajax({
            type: "GET",
            url: '/v1.2/scenes/passenger/type/12/scene_id/' + Id + '/start_date/' + startTime + '/end_date/' + endTime + '/customer_type/' + usertype + '/app_category_type/' + apptype,
            dataType: 'json',
            success: function (res) {
                console.log(res)
                if(res.code==10000){
                    RenderList(res.data);
                }else{
                    tipTopShow("查询信息失败，请重试...");
                }
            },
            error: function (err) {
                tipTopShow("查询信息失败，请重试...");
            }
        });
    }
    //渲染数据列表
    function RenderList(data){
        if(data==""){
            $('#type_box table tbody').append('<tr><td></td><td></td><td class="noMsg"><img src="../../../../../public/img/no_data.png"/></div></td><td></td><td></td></tr>');      
            return;
        }
        var str='',
            index=0;
        $.each(data,function(k,v){
            index++;
            $.each(v,function(item,val){
                str+='<tr>';
                str+='<td>'+index+'</td>';
                str+='<td>';
                str+='<i class="app_icon">';
                str+='<img src="../../../../../public/img/sg_icon.png" />';
                str+='</i>'+val.app+'</td>';
                str+='<td>'+k+'</td>';
                str+='<td>'+round2(val.ratio*100,2)+'%</td>';
                str+='<td>'+val.global_division+'</td>';
                str+='</tr>';  
            })       
        })
        $('#type_box table tbody').html(str)
    }


    //获取近期日期
    function getDay(day) {
        var today = new Date();
        var targetday_milliseconds = today.getTime() + 1000 * 60 * 60 * 24 * day;
        today.setTime(targetday_milliseconds);

        var tYear = today.getFullYear();
        var tMonth = today.getMonth();
        var tDate = today.getDate();
        tMonth = doHandleMonth(tMonth + 1);
        tDate = doHandleMonth(tDate);
        return tYear + "-" + tMonth + "-" + tDate;
    }

    function doHandleMonth(month) {
        var m = month;
        if (month.toString().length == 1) {
            m = "0" + month;
        }
        return m;
    }
    //新老客户切换
    function getUlListVal() {
        var userType = $('#item_ul').find('.cur').attr('type'),
            category = $("select[name='timetype']").val(),
            startDate = "",
            endDate = "";
        if (category == 0) {
            $('#time_filter').show();
            if ($('#date_day').val() != "") {
                var times = $('#date_day').val().split(' - ')
                startDate = times[0];
                endDate = times[1];
            }
        } else if (category == 1) {
            startDate = getDay(-category);
            endDate = startDate;
            $('#time_filter').hide();
        } else {
            startDate = getDay(-category);
            endDate = getDay(-1);
            $('#time_filter').hide();
        }
        return startDate + "=" + endDate + "=" + userType + "=" + category
    }

